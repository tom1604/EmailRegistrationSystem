                                    <SplineColorKeyFrame KeyTime="00:00:00.0" Value="{StaticResource FilledColor}"/>
                                    <SplineColorKeyFrame KeyTime="00:00:01.9" Value="{StaticResource UnfilledColor}"/>
                                </ColorAnimationUsingKeyFrames>
                            </Storyboard>

                            <Storyboard x:Key="Animation19" BeginTime="00:00:01.9" RepeatBehavior="Forever">
                                <ColorAnimationUsingKeyFrames Storyboard.TargetName="ellipse19" Storyboard.TargetProperty="(Shape.Fill).(SolidColorBrush.Color)">
                                    <SplineColorKeyFrame KeyTime="00:00:00.0" Value="{StaticResource FilledColor}"/>
                                    <SplineColorKeyFrame KeyTime="00:00:01.9" Value="{StaticResource UnfilledColor}"/>
                                </ColorAnimationUsingKeyFrames>
                            </Storyboard>
                        </ControlTemplate.Resources>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsVisible" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard Storyboard="{StaticResource Animation0}" x:Name="Storyboard0" />
                                    <BeginStoryboard Storyboard="{StaticResource Animation1}" x:Name="Storyboard1"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation2}" x:Name="Storyboard2"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation3}" x:Name="Storyboard3"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation4}" x:Name="Storyboard4"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation5}" x:Name="Storyboard5"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation6}" x:Name="Storyboard6"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation7}" x:Name="Storyboard7"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation8}" x:Name="Storyboard8"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation9}" x:Name="Storyboard9"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation10}" x:Name="Storyboard10"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation11}" x:Name="Storyboard11"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation12}" x:Name="Storyboard12"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation13}" x:Name="Storyboard13"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation14}" x:Name="Storyboard14"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation15}" x:Name="Storyboard15"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation16}" x:Name="Storyboard16"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation17}" x:Name="Storyboard17"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation18}" x:Name="Storyboard18"/>
                                    <BeginStoryboard Storyboard="{StaticResource Animation19}" x:Name="Storyboard19"/> 
                                </Trigger.EnterActions>

                                <Trigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="Storyboard0"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard1"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard2"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard3"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard4"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard5"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard6"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard7"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard8"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard9"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard10"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard11"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard12"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard13"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard14"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard15"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard16"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard17"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard18"/>
                                    <StopStoryboard BeginStoryboardName="Storyboard19"/>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>

                        <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}">
                            <Grid>
                                <Canvas Height="160" Width="160">
                                    <Canvas.Resources>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Width" Value="15"/>
                                            <Setter Property="Height" Value="15" />
                                            <Setter Property="Fill" Value="#009B9B9B" />
                                        </Style>
                                    </Canvas.Resources>

                                    <Ellipse x:Name="ellipse0" Canvas.Left="1" Canvas.Top="71"/>
                                    <Ellipse x:Name="ellipse1" Canvas.Left="4" Canvas.Top="50"/>
                                    <Ellipse x:Name="ellipse2" Canvas.Left="14" Canvas.Top="30"/>
                                    <Ellipse x:Name="ellipse3" Canvas.Left="30" Canvas.Top="14"/>
                                    <Ellipse x:Name="ellipse4" Canvas.Left="50" Canvas.Top="4"/>
                                    <Ellipse x:Name="ellipse5" Canvas.Left="73" Canvas.Top="1"/>
                                    <Ellipse x:Name="ellipse6" Canvas.Left="96" Canvas.Top="4"/>
                                    <Ellipse x:Name="ellipse7" Canvas.Left="116" Canvas.Top="14"/>
                                    <Ellipse x:Name="ellipse8" Canvas.Left="132" Canvas.Top="30"/>
                                    <Ellipse x:Name="ellipse9" Canvas.Left="142" Canvas.Top="50"/>
                                    <Ellipse x:Name="ellipse10" Canvas.Left="145" Canvas.Top="71"/>
                                    <Ellipse x:Name="ellipse11" Canvas.Left="142" Canvas.Top="92"/>
                                    <Ellipse x:Name="ellipse12" Canvas.Left="132" Canvas.Top="114"/>
                                    <Ellipse x:Name="ellipse13" Canvas.Left="116" Canvas.Top="130"/>
                                    <Ellipse x:Name="ellipse14" Canvas.Left="96" Canvas.Top="141"/>
                                    <Ellipse x:Name="ellipse15" Canvas.Left="73" Canvas.Top="145"/>
                                    <Ellipse x:Name="ellipse16" Canvas.Left="50" Canvas.Top="141"/>
                                    <Ellipse x:Name="ellipse17" Canvas.Left="30" Canvas.Top="130"/>
                                    <Ellipse x:Name="ellipse18" Canvas.Left="14" Canvas.Top="114"/>
                                    <Ellipse x:Name="ellipse19" Canvas.Left="4" Canvas.Top="92"/>
                                </Canvas>
                                <Label Content="{Binding Path=Text}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Width="200" Height="200">
        <Ellipse VerticalAlignment="Center" Fill="#FF13E054" Height="150" Margin="25,25" StrokeDashCap="Round" StrokeThickness="10" Stroke="#FF05531D"/>
        <materialDesign:PackIcon Kind="Check" 
                                 Foreground="#FFD8F5E1" 
                                 Width="100" 
                                 Height="100" 
                                 VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Control Style="{StaticResource BusyAnimationStyle}"/>
    </Grid>

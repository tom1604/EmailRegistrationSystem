                    <Ellipse x:Name="Ellipse12" Canvas.Left="30" Canvas.Top="130"/>
                    <Ellipse x:Name="Ellipse13" Canvas.Left="14" Canvas.Top="114"/>
                    <Ellipse x:Name="Ellipse14" Canvas.Left="4" Canvas.Top="92"/>
                    <Ellipse x:Name="Ellipse15" Canvas.Left="1" Canvas.Top="71"/>
                    <Ellipse x:Name="Ellipse16" Canvas.Left="4" Canvas.Top="50"/>
                    <Ellipse x:Name="Ellipse17" Canvas.Left="14" Canvas.Top="30"/>
                    <Ellipse x:Name="Ellipse18" Canvas.Left="30" Canvas.Top="14"/>
                    <Ellipse x:Name="Ellipse19" Canvas.Left="50" Canvas.Top="4"/>
                </Canvas>
                <Label Content="{Binding Path=Text}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>
